{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Colours",
    "description": "Schema for Colours, ARGB values",
    "type": "object",
    "properties": {
        "name": {"type": "string"},
        "color": {
           "type": "string",
           "pattern": "^(([0-9]|[a-f]|[A-F]){2})?(([0-9]|[a-f]|[A-F]){2})?(([0-9]|[a-f]|[A-F]){2})?$"
        }
    }
}
